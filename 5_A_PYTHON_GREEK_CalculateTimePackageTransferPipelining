def pipelining_with_total_message_input():
    try:
        print("ğŸ¯ Î¥Ï€Î¿Î»Î¿Î³Î¹ÏƒÏ„Î®Ï‚ ÎšÎ±Î¸Ï…ÏƒÏ„Î­ÏÎ·ÏƒÎ·Ï‚ Î”Î¹ÎºÏ„ÏÎ¿Ï… Î¼Îµ Pipelining (ÏƒÏ…Î½Î¿Î»Î¹ÎºÏŒ Î¼Î­Î³ÎµÎ¸Î¿Ï‚ ÏƒÎµ Mbits)")

        start_point = input("ğŸ“ Î”ÏÏƒÎµ Ï„Î¿ ÏƒÎ·Î¼ÎµÎ¯Î¿ ÎµÎºÎºÎ¯Î½Î·ÏƒÎ·Ï‚ (Ï€.Ï‡. PC, Source): ")
        num_routers = int(input("ğŸ›£ï¸ Î”ÏÏƒÎµ Î±ÏÎ¹Î¸Î¼ÏŒ Î´ÏÎ¿Î¼Î¿Î»Î¿Î³Î·Ï„ÏÎ½ (routers): "))
        L_total_Mbits = float(input("ğŸ’¾ Î”ÏÏƒÎµ Ï„Î¿ ÏƒÏ…Î½Î¿Î»Î¹ÎºÏŒ Î¼Î­Î³ÎµÎ¸Î¿Ï‚ Ï„Î¿Ï… Î¼Î·Î½ÏÎ¼Î±Ï„Î¿Ï‚ (ÏƒÎµ Mbits): "))
        R = float(input("âš™ï¸ Î”ÏÏƒÎµ Ï„Î¿ ÏÏ…Î¸Î¼ÏŒ Î¼ÎµÏ„Î¬Î´Î¿ÏƒÎ·Ï‚ R (ÏƒÎµ Mbps): "))
        N = int(input("ğŸ“¦ Î”ÏÏƒÎµ Ï„Î¿Î½ Î±ÏÎ¹Î¸Î¼ÏŒ Ï€Î±ÎºÎ­Ï„Ï‰Î½: "))

        if L_total_Mbits <= 0 or R <= 0 or N <= 0 or num_routers < 0:
            print("ğŸš¨ ÎŒÎ»ÎµÏ‚ Î¿Î¹ Ï„Î¹Î¼Î­Ï‚ Ï€ÏÎ­Ï€ÎµÎ¹ Î½Î± ÎµÎ¯Î½Î±Î¹ Î¸ÎµÏ„Î¹ÎºÎ­Ï‚.")
            return

        # Î¥Ï€Î¿Î»Î¿Î³Î¹ÏƒÎ¼ÏŒÏ‚ Î¼ÎµÎ³Î­Î¸Î¿Ï…Ï‚ Î±Î½Î¬ Ï€Î±ÎºÎ­Ï„Î¿ (ÏƒÎµ Mbits)
        L_packet_Mbits = L_total_Mbits / N

        # ÎœÎµÏ„Î±Ï„ÏÎ¿Ï€Î® ÏƒÎµ bits
        L_packet_bits = L_packet_Mbits * 1_000_000
        R_bps = R * 1_000_000

        # Î§ÏÏŒÎ½Î¿Ï‚ Î¼ÎµÏ„Î¬Î´Î¿ÏƒÎ·Ï‚ Î±Î½Î¬ Ï€Î±ÎºÎ­Ï„Î¿
        t = L_packet_bits / R_bps

        # Hops = routers + 1 (Ï„ÎµÏÎ¼Î±Ï„Î¹ÎºÏŒÏ‚ Ï€Î±ÏÎ±Î»Î®Ï€Ï„Î·Ï‚)
        hops = num_routers + 1

        # ÎšÎ±Î¸Ï…ÏƒÏ„Î­ÏÎ·ÏƒÎ· Ï‡Ï‰ÏÎ¯Ï‚ pipelining
        total_no_pipeline = N * hops * t

        # ÎšÎ±Î¸Ï…ÏƒÏ„Î­ÏÎ·ÏƒÎ· Î¼Îµ pipelining
        total_pipeline = (N + hops - 1) * t

        # Î‘Ï€Î¿Ï„ÎµÎ»Î­ÏƒÎ¼Î±Ï„Î±
        print("\nğŸ“Š Î‘Ï€Î¿Ï„ÎµÎ»Î­ÏƒÎ¼Î±Ï„Î±:")
        print(f"ğŸ” Î‘Ï†ÎµÏ„Î·ÏÎ¯Î±: {start_point}")
        print(f"ğŸš¦ Î‘ÏÎ¹Î¸Î¼ÏŒÏ‚ Î´ÏÎ¿Î¼Î¿Î»Î¿Î³Î·Ï„ÏÎ½: {num_routers}")
        print(f"ğŸ§­ Î‘ÏÎ¹Î¸Î¼ÏŒÏ‚ hops (Î¶ÎµÏÎ¾ÎµÏ‰Î½): {hops}")
        print(f"ğŸ“¦ ÎœÎ­Î³ÎµÎ¸Î¿Ï‚ ÎºÎ¬Î¸Îµ Ï€Î±ÎºÎ­Ï„Î¿Ï…: {L_packet_Mbits:.6f} Mbits")
        print(f"â±ï¸ Î§ÏÏŒÎ½Î¿Ï‚ Î¼ÎµÏ„Î¬Î´Î¿ÏƒÎ·Ï‚ Î±Î½Î¬ Ï€Î±ÎºÎ­Ï„Î¿: {t:.6f} sec")
        print(f"ğŸ¢ ÎšÎ±Î¸Ï…ÏƒÏ„Î­ÏÎ·ÏƒÎ· Ï‡Ï‰ÏÎ¯Ï‚ pipelining: {total_no_pipeline:.3f} sec")
        print(f"âš¡ ÎšÎ±Î¸Ï…ÏƒÏ„Î­ÏÎ·ÏƒÎ· Î¼Îµ pipelining: {total_pipeline:.3f} sec")

    except ValueError:
        print("ğŸš¨ Î Î±ÏÎ±ÎºÎ±Î»Ï Î´ÏÏƒÎµ Î­Î³ÎºÏ…ÏÎ¿Ï…Ï‚ Î±ÏÎ¹Î¸Î¼Î¿ÏÏ‚ (Ï€.Ï‡. 7.5, 1.5, 5000 ÎºÎ»Ï€)")


# ğŸ” Î•ÎºÎºÎ¯Î½Î·ÏƒÎ· Ï„Î¿Ï… Ï€ÏÎ¿Î³ÏÎ¬Î¼Î¼Î±Ï„Î¿Ï‚
pipelining_with_total_message_input()
